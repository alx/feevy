require 'rubygems'
require 'rake'
require 'rake/testtask'
require 'rake/rdoctask'
require 'rake/packagetask'
require 'rake/gempackagetask'
require 'rake/contrib/rubyforgepublisher'

require File.join(File.dirname(__FILE__), 'lib/autodiscovery', 'version')

PKG_NAME      = 'autodiscovery'
PKG_VERSION   = Autodiscovery::AUTODISCOVERY_VERSION::STRING
PKG_FILE_NAME = "#{PKG_NAME}-#{PKG_VERSION}"

RELEASE_NAME  = "REL #{PKG_VERSION}"

RUBY_FORGE_PROJECT = "autodiscovery"
RUBY_FORGE_USER    = "pantulis"

PKG_FILES = FileList[
    "lib/**/*", "test/**/*", "examples/**/*", "doc/**/*", 
    "[A-Z]*", "install.rb", "rakefile"
].exclude(/\bCVS\b|~$/).exclude(/database\.yml/).exclude(/\._.*/)

desc "Default Task"
task :default => [ :test_all ]

# Run the unit tests

Rake::TestTask.new("test_all") { |t|
  t.libs << "test"
  t.test_files = FileList['test/unit/*_test.rb']
  t.verbose = true
}


# Generate the RDoc documentation

Rake::RDocTask.new { |rdoc|
  rdoc.rdoc_dir = 'doc'
  rdoc.title    = "Autodiscovery -- library for discovering RSS feeds"
  rdoc.options << '--line-numbers' << '--inline-source' <<
    '--accessor' << 'cattr_accessor=object'
  rdoc.template = "#{ENV['template']}.rb" if ENV['template']
  rdoc.rdoc_files.include('README', 'CHANGELOG')
  rdoc.rdoc_files.include('lib/**/*.rb')
}

# Create compressed packages

dist_dirs = [ "lib", "test" ]

spec = Gem::Specification.new do |s|
  s.name = PKG_NAME
  s.version = PKG_VERSION
  s.summary = "Automatic discovery of RSS feeds embedded on web pages"
  s.description = "Implements a simple system for autodiscovery"

  s.files = [ "rakefile", "install.rb", "README", "CHANGELOG" ]
  dist_dirs.each do |dir|
    s.files = s.files + Dir.glob( "#{dir}/**/*" ).delete_if do |item|
      item.include?( "\.svn" ) || item.include?( "database\.yml" )
    end
  end
  
  s.require_path = 'lib'
  s.autorequire = 'autodiscovery'

  s.has_rdoc = true
  s.extra_rdoc_files = %w( README )
  s.rdoc_options.concat ['--main',  'README']
  
  s.author = "Juan Lupion"
  s.email = "pantulis@gmail.com"
  s.homepage = "http://sobrerailes.com/projects/autodiscovery"
  s.rubyforge_project = "autodiscovery"
end
  
Rake::GemPackageTask.new(spec) do |p|
  p.gem_spec = spec
  p.need_tar = true
  p.need_zip = true
end

task :profile do
  $:.unshift(File.dirname(__FILE__) + '/lib')
  require 'autodiscovery'
  puts "Profiling Autodiscovery #{Autodiscovery::AUTODISCOVERY_VERSION::STRING}..."
  command = 'ruby -rprofile -e \'' +
    '$:.unshift(File.dirname(__FILE__) + "/lib");' +
    'require "autodiscovery";' +
    'Autodiscovery::Pa.open(' +
      '"http://hsivonen.iki.fi/test/unknown-namespace.atom")' +
        '.build_xml("atom", 1.0)\''
  `#{command}`
end

task :lines do
  lines, codelines, total_lines, total_codelines = 0, 0, 0, 0

  for file_name in FileList["lib/**/*.rb"]
    f = File.open(file_name)

    while line = f.gets
      lines += 1
      next if line =~ /^\s*$/
      next if line =~ /^\s*#/
      codelines += 1
    end
    puts "L: #{sprintf("%4d", lines)}, LOC #{sprintf("%4d", codelines)} | #{file_name}"
    
    total_lines     += lines
    total_codelines += codelines
    
    lines, codelines = 0, 0
  end

  puts "Total: Lines #{total_lines}, LOC #{total_codelines}"
end


# Publishing ------------------------------------------------------

desc "Publish the API documentation"
task :pdoc => [:rdoc] do 
  Rake::SshDirPublisher.new("vacindak@sporkmonger.com", "public_html/projects/feedtools/api", "doc").upload
end