<html>
<head>
	<title><%= @title.nil? ? 'User Interface: ' + controller.action_name : @title %></title>
  <%= stylesheet_link_tag 'auth' %>
	<%= javascript_include_tag 'prototype', 'effects' %>
	<%= javascript_include_tag 'auth_generator' %>
</head>
<body>
<div id="accountinfo">
 <div class="main" id="content">
  <div class="loginbox">
   <%= render :partial => 'menu' %>
   <% if user_logged_in? -%>
    <h1><%= link_to user_icon(@user.login,@user.email), auth_url(:action => 'info') %>
        Hi <%= @user.name %>!</h1>
   <% end -%>
<%= @content_for_layout %>
  </div>
 </div>

 <div class="footer">
 Powered by <a href="http://penso.info/rails/auth_generator/">auth_generator</a>. 
 Icons from <a href="http://art.gnome.org/">Gnome</a>.
 </div>

</div>
</body>
</html>
